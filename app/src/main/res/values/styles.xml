<resources>

    <style name="DividerLine">
        <item name="android:background">@color/material_grey_700</item>
    </style>

    <style name="DividerLine.Horizontal" parent="DividerLine">
        <item name="android:layout_height">@dimen/divider_width</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DividerLine.Vertical" parent="DividerLine">
        <item name="android:layout_width">@dimen/divider_width</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
        <!--<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
        <!--<item name="icon_color">@color/white</item> &lt;!&ndash; to display the icons properly since this theme is the default &ndash;&gt;-->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">?title_color</item>
    </style>

    <style name="Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/text_micro</item>
        <item name="android:textColor">?subtitle_color</item>
    </style>

    <style name="Toolbar.Expand.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="text_link">
        <item name="android:textColor">?android:colorAccent</item>
    </style>

</resources>
